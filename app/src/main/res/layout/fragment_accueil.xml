<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_accueil"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/id_btn_onglet_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/taille_btn_accueil"
        android:layout_marginTop="@dimen/margin_accueil"
        android:text="@string/onglet_1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/id_btn_onglet_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/taille_btn_accueil"
        android:text="@string/onglet_2"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_onglet_1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/id_btn_onglet_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/taille_btn_accueil"
        android:text="@string/onglet_3"
        app:layout_constraintHeight=""
        app:layout_constraintTop_toBottomOf="@+id/id_btn_onglet_2"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>